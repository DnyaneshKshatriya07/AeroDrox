@model IEnumerable<StudentApp.Models.Student>

<h2>Students List</h2>

<a class="btn btn-primary" href="/Students/Create">Add Student</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Age</td>
                <td>@s.Course</td>
                <td>
                    <a class="btn btn-sm btn-info" href="/Students/Details/@s.Id">Details</a>
                    <a class="btn btn-sm btn-warning" href="/Students/Edit/@s.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Students/Delete/@s.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
