@model AeroDroxUAV.Models.DroneServices
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Drone Suvidha";
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-exclamation-triangle fa-lg"></i>
                        </div>
                        <div>
                            <h1 class="h4 mb-0">Delete Drone suvidha</h1>
                            <p class="mb-0 opacity-75 small">Confirm suvidha deletion</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning border-warning mb-4">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="fas fa-exclamation-circle text-warning"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading h6 mb-1">Critical Action!</h5>
                                <p class="mb-0 small">You are about to permanently delete a suvidha. All suvidha data will be lost.</p>
                            </div>
                        </div>
                    </div>

                    <div class="service-details p-3 mb-4 rounded" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                        <h4 class="text-center mb-3">
                            <i class="fas fa-concierge-bell text-primary me-2"></i>@Model.Name
                            <small class="text-muted d-block mt-1 small">@Model.Category</small>
                        </h4>
                        
                        <!-- Service Media Preview -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl) || !string.IsNullOrEmpty(Model.VideoUrl))
                        {
                            <div class="text-center mb-3">
                                @if (!string.IsNullOrEmpty(Model.VideoUrl))
                                {
                                    <video class="img-fluid rounded" style="max-height: 150px;" controls>
                                        <source src="@Model.VideoUrl" type="video/mp4">
                                        Your browser does not support the video tag.
                                    </video>
                                }
                                else if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 150px;" alt="@Model.Name">
                                }
                            </div>
                        }
                        
                        <div class="row text-center">
                            <div class="col-md-4 mb-2">
                                <div class="p-2 bg-white rounded shadow-sm">
                                    <h6 class="text-muted small mb-1">
                                        <i class="fas fa-layer-group me-1"></i>Category
                                    </h6>
                                    <span class="badge bg-info">@Model.Category</span>
                                </div>
                            </div>
                            <div class="col-md-4 mb-2">
                                <div class="p-2 bg-white rounded shadow-sm">
                                    <h6 class="text-muted small mb-1">
                                        <i class="fas fa-clock me-1"></i>Duration
                                    </h6>
                                    <span class="badge bg-warning small">@(string.IsNullOrEmpty(Model.Duration) ? "N/A" : Model.Duration)</span>
                                </div>
                            </div>
                            <div class="col-md-4 mb-2">
                                <div class="p-2 bg-white rounded shadow-sm">
                                    <h6 class="text-muted small mb-1">
                                        <i class="fas fa-toggle-on me-1"></i>Status
                                    </h6>
                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary") small">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <h6 class="text-muted small mb-2">
                                <i class="fas fa-align-left me-1"></i>Description
                            </h6>
                            <div class="p-2 bg-white rounded shadow-sm">
                                <p class="mb-0 small">@Model.Description</p>
                            </div>
                        </div>
                        
                        @if(!string.IsNullOrEmpty(Model.Benefits))
                        {
                            <div class="mt-3">
                                <h6 class="text-muted small mb-2">
                                    <i class="fas fa-star me-1"></i>Key Benefits
                                </h6>
                                <div class="p-2 bg-white rounded shadow-sm">
                                    @{
                                        var benefits = Model.Benefits.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                        foreach(var benefit in benefits)
                                        {
                                            <span class="badge bg-light text-dark me-1 mb-1 small">@benefit.Trim()</span>
                                        }
                                    }
                                </div>
                            </div>
                        }
                        
                        <div class="mt-3">
                            <div class="alert alert-danger border-danger small">
                                <i class="fas fa-users me-2"></i>
                                <strong>Note:</strong> This suvidha may have active bookings.
                                @if (!string.IsNullOrEmpty(Model.ImageUrl) || !string.IsNullOrEmpty(Model.VideoUrl))
                                {
                                    <div class="mt-1">
                                        <i class="fas @(!string.IsNullOrEmpty(Model.VideoUrl) ? "fa-video" : "fa-image") me-2"></i>
                                        <strong>Media file will also be deleted:</strong> 
                                        @(!string.IsNullOrEmpty(Model.VideoUrl) ? Model.VideoUrl : Model.ImageUrl)
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <form method="post" asp-controller="DroneServices" asp-action="Delete" id="deleteForm">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" />
                        <input type="hidden" asp-for="VideoUrl" />
                        
                        <div class="text-center">
                            <h5 class="mb-3 text-danger h6">
                                <i class="fas fa-question-circle me-2"></i>
                                Are you absolutely sure you want to delete this suvidha?
                            </h5>
                            
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" id="confirmDelete">
                                <label class="form-check-label text-danger fw-semibold small" for="confirmDelete">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Yes, I understand this action is permanent and cannot be undone
                                </label>
                            </div>
                            
                            <div class="d-flex justify-content-center gap-2">
                                <button type="submit" class="btn btn-danger btn-sm px-4" id="deleteBtn">
                                    <i class="fas fa-trash me-1"></i>Delete Suvidha
                                </button>
                                <a href="/DroneServices/Index" class="btn btn-outline-secondary btn-sm px-4">
                                    <i class="fas fa-times me-1"></i>Cancel
                                </a>
                            </div>
                            
                            <p class="text-muted mt-3 small">
                                <i class="fas fa-info-circle me-1"></i>
                                This action will permanently remove the suvidha and all associated data.
                                @if (!string.IsNullOrEmpty(Model.ImageUrl) || !string.IsNullOrEmpty(Model.VideoUrl))
                                {
                                    <br /><i class="fas @(!string.IsNullOrEmpty(Model.VideoUrl) ? "fa-video" : "fa-image") me-1"></i>
                                    <text>The @(!string.IsNullOrEmpty(Model.VideoUrl) ? "video" : "image") file will also be deleted from the server.</text>
                                }
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Form submission with confirmation
            $('#deleteForm').submit(function(e) {
                return confirm('Final confirmation: Are you absolutely sure you want to delete this service?');
            });
        });
    </script>
    
    <style>
        .card {
            border-radius: 12px;
            overflow: hidden;
        }
        
        .bg-danger {
            background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
        }
        
        .alert-warning {
            border-radius: 8px;
            border-left: 4px solid #ffc107;
            font-size: 0.875rem;
        }
        
        .alert-danger {
            border-radius: 8px;
            border-left: 4px solid #dc3545;
            font-size: 0.875rem;
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
            border: none;
            border-radius: 8px;
            padding: 0.375rem 1rem;
            font-weight: 500;
            font-size: 0.875rem;
        }
        
        .btn-outline-secondary {
            border-radius: 8px;
            padding: 0.375rem 1rem;
            font-size: 0.875rem;
        }
        
        .badge {
            font-size: 0.75rem;
            padding: 0.25em 0.5em;
            border-radius: 50px;
        }
    </style>
}