@model AeroDroxUAV.Models.DroneServices
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Drone Service";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                        <div>
                            <h1 class="h3 mb-0">Delete Drone Service</h1>
                            <p class="mb-0 opacity-75">Confirm service deletion</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-5">
                    <div class="alert alert-warning border-warning">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="fas fa-exclamation-circle fa-2x text-warning"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading">Critical Action!</h5>
                                <p class="mb-0">You are about to permanently delete a service. All service data will be lost.</p>
                            </div>
                        </div>
                    </div>

                    <div class="service-details p-4 mb-4 rounded" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                        <h4 class="text-center mb-4">
                            <i class="fas fa-concierge-bell text-primary me-2"></i>@Model.Name
                            <small class="text-muted d-block mt-1">@Model.Category</small>
                        </h4>
                        
                        <!-- Service Image -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="text-center mb-4">
                                <img src="@Model.ImageUrl" class="img-fluid rounded" style="max-height: 200px;" alt="@Model.Name">
                            </div>
                        }
                        
                        <div class="row text-center">
                            <div class="col-md-6 mb-3">
                                <div class="p-3 bg-white rounded shadow-sm">
                                    <h6 class="text-muted mb-2">
                                        <i class="fas fa-layer-group me-1"></i>Category
                                    </h6>
                                    <h4>
                                        <span class="badge bg-info">@Model.Category</span>
                                    </h4>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="p-3 bg-white rounded shadow-sm">
                                    <h6 class="text-muted mb-2">
                                        <i class="fas fa-toggle-on me-1"></i>Status
                                    </h6>
                                    <h4>
                                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                            @(Model.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </h4>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <h6 class="text-muted mb-2">
                                <i class="fas fa-align-left me-1"></i>Description
                            </h6>
                            <div class="p-3 bg-white rounded shadow-sm">
                                <p class="mb-0">@Model.Description</p>
                            </div>
                        </div>
                        
                        @if(!string.IsNullOrEmpty(Model.Benefits))
                        {
                            <div class="mt-4">
                                <h6 class="text-muted mb-2">
                                    <i class="fas fa-star me-1"></i>Key Benefits
                                </h6>
                                <div class="p-3 bg-white rounded shadow-sm">
                                    @{
                                        var benefits = Model.Benefits.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                        foreach(var benefit in benefits)
                                        {
                                            <span class="badge bg-light text-dark me-1 mb-1">@benefit.Trim()</span>
                                        }
                                    }
                                </div>
                            </div>
                        }
                        
                        <div class="mt-4 text-center">
                            <div class="alert alert-danger border-danger">
                                <i class="fas fa-users me-2"></i>
                                <strong>Note:</strong> This service may have active bookings.
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div class="mt-2">
                                        <i class="fas fa-image me-2"></i>
                                        <strong>Image will also be deleted:</strong> @Model.ImageUrl
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <form method="post" asp-controller="DroneServices" asp-action="Delete" id="deleteForm">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImageUrl" />
                        
                        <div class="text-center">
                            <h5 class="mb-4 text-danger">
                                <i class="fas fa-question-circle me-2"></i>
                                Are you absolutely sure you want to delete this service?
                            </h5>
                            
                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" id="confirmDelete">
                                <label class="form-check-label text-danger fw-semibold" for="confirmDelete">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Yes, I understand this action is permanent and cannot be undone
                                </label>
                            </div>
                            
                            <div class="d-flex justify-content-center gap-3">
                                <button type="submit" class="btn btn-danger btn-lg px-5" id="deleteBtn">
                                    <i class="fas fa-trash me-2"></i>Delete Service
                                </button>
                                <a href="/DroneServices/Index" class="btn btn-outline-secondary btn-lg px-5">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                            
                            <p class="text-muted mt-4 small">
                                <i class="fas fa-info-circle me-1"></i>
                                This action will permanently remove the service and all associated data.
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <br /><i class="fas fa-image me-1"></i>
                                    <text>The service image file will also be deleted from the server.</text>
                                }
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Form submission with confirmation
            $('#deleteForm').submit(function(e) {
                return confirm('Final confirmation: Are you absolutely sure you want to delete this service?');
            });
        });
    </script>
    
    <style>
        .card {
            border-radius: 20px;
            overflow: hidden;
        }
        
        .card-header {
            border-radius: 20px 20px 0 0 !important;
        }
        
        .bg-danger {
            background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
        }
        
        .alert-warning {
            border-radius: 12px;
            border-left: 5px solid #ffc107;
        }
        
        .alert-danger {
            border-radius: 12px;
            border-left: 5px solid #dc3545;
        }
        
        .service-details {
            border: 2px dashed #dee2e6;
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #f5576c 0%, #f093fb 100%);
            border: none;
            border-radius: 12px;
            padding: 12px 30px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-danger:hover {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(245, 87, 108, 0.4);
        }
        
        .btn-outline-secondary {
            border-radius: 12px;
            padding: 12px 30px;
            border-width: 2px;
        }
        
        .badge {
            font-size: 0.9rem;
            padding: 0.5em 1em;
            border-radius: 50px;
        }
        
        .shadow-sm {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
        }
        
        .form-check-input:checked {
            background-color: #dc3545;
            border-color: #dc3545;
        }
        
        .form-check-label {
            font-size: 0.9rem;
        }
        
        .img-fluid {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
        }
    </style>
}