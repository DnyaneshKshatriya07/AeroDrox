@model IEnumerable<AeroDroxUAV.Models.DroneServices>
@{
    ViewData["Title"] = "Drone Suvidha's";
    var role = ViewBag.Role as string;
}

<!-- Video Background Section -->
<div data-poster-url="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -poster-00001.jpg" 
     data-video-urls="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.mp4,https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.webm" 
     data-autoplay="true" 
     data-loop="true" 
     data-wf-ignore="true" 
     class="background-video w-background-video w-background-video-atom">
    
    <video id="services-video-bg" 
           autoplay="" 
           loop="" 
           style="background-image:url('https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -poster-00001.jpg')" 
           muted="" 
           playsinline="" 
           data-wf-ignore="true" 
           data-object-fit="cover">
        
        <source src="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.mp4" 
                data-wf-ignore="true" 
                type="video/mp4">
        
        <source src="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.webm" 
                data-wf-ignore="true" 
                type="video/webm">
    </video>
</div>

<!-- Main Content -->
<div class="container-fluid px-4 main-content-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-concierge-bell me-2"></i>Drone Suvidha's
            </h1>
            <p class="text-muted mb-0">Professional drone suvidha's for various industries</p>
        </div>
        @if(role == "Admin")
        {
            <a href="/DroneServices/Create" class="btn btn-success btn-sm">
                <i class="fas fa-plus me-1"></i>Add New Suvidha
            </a>
        }
    </div>

    <!-- Stats Cards - Admin Only -->
    @if(role == "Admin")
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card bg-primary text-white shadow-sm border-0">
                    <div class="card-body py-3">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-list fa-lg"></i>
                            </div>
                            <div>
                                <h3 class="h4 mb-0">@Model.Count()</h3>
                                <p class="mb-0 small">Total Suvidha's</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-success text-white shadow-sm border-0">
                    <div class="card-body py-3">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-check-circle fa-lg"></i>
                            </div>
                            <div>
                                <h3 class="h4 mb-0">@Model.Count(s => s.IsActive)</h3>
                                <p class="mb-0 small">Active Suvidha's</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Services Grid - 2 cards per row -->
    <div class="row">
        @foreach(var service in Model)
        {
            <div class="col-lg-6 col-md-12 mb-4">
                <div class="card h-100 border-0 shadow-sm hover-card">
                    <!-- Service Media -->
                    <div class="position-relative" style="height: 180px; overflow: hidden;">
                        @if (!string.IsNullOrEmpty(service.VideoUrl))
                        {
                                            <!-- Video with Autoplay -->
                                            <video class="w-100 h-100" 
                                                   style="object-fit: cover; background-color: #000;"
                                                   autoplay 
                                                   muted 
                                                   loop 
                                                   playsinline
                                                   onmouseover="this.play()" 
                                                   onmouseout="this.play()">
                                                <source src="@service.VideoUrl" type="video/mp4">
                                                Your browser does not support the video tag.
                                            </video>
                                            <!-- Video Badge -->
                                            <div class="position-absolute top-0 start-0 m-2">
                                                <span class="badge bg-dark small">
                                                    <i class="fas fa-video me-1"></i>Video
                                                </span>
                                            </div>
                        }
                        else if (!string.IsNullOrEmpty(service.ImageUrl))
                        {
                                            <img src="@service.ImageUrl" class="card-img-top" alt="@service.Name" 
                                                 style="height: 100%; width: 100%; object-fit: cover;">
                                            <!-- Image Badge -->
                                            <div class="position-absolute top-0 start-0 m-2">
                                                <span class="badge bg-info small">
                                                    <i class="fas fa-image me-1"></i>Image
                                                </span>
                                            </div>
                        }
                        else
                        {
                                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                                 style="height: 100%;">
                                                <i class="fas fa-concierge-bell fa-2x text-muted"></i>
                                            </div>
                        }
                        
                        <!-- Status Badge -->
                        <div class="position-absolute top-0 end-0 m-2">
                            @if(service.IsActive)
                            {
                                <span class="badge bg-success small">
                                    <i class="fas fa-check-circle me-1"></i>Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary small">
                                    <i class="fas fa-times-circle me-1"></i>Inactive
                                </span>
                            }
                        </div>
                        
                        <!-- Category Badge -->
                        <div class="position-absolute top-0 start-0 m-2">
                            <span class="badge bg-primary small">@service.Category</span>
                        </div>
                        
                        <!-- Media Type Badge -->
                        <div class="position-absolute bottom-0 start-0 m-2">
                            @if(!string.IsNullOrEmpty(service.VideoUrl))
                            {
                                <span class="badge bg-dark small">
                                    <i class="fas fa-video me-1"></i>Video
                                </span>
                            }
                            else if(!string.IsNullOrEmpty(service.ImageUrl))
                            {
                                <span class="badge bg-info small">
                                    <i class="fas fa-image me-1"></i>Image
                                </span>
                            }
                        </div>
                    </div>
                    
                    <div class="card-body p-3">
                        <h5 class="card-title mb-2">@service.Name</h5>
                        
                        <!-- Duration Badge -->
                        @if(!string.IsNullOrEmpty(service.Duration))
                        {
                            <div class="mb-2">
                                <span class="badge bg-warning text-dark small">
                                    <i class="fas fa-clock me-1"></i>@service.Duration
                                </span>
                            </div>
                        }
                        
                        <p class="card-text text-truncate-3 mb-3" style="height: 4.5em; overflow: hidden;">
                            @service.Description
                        </p>
                        
                        <!-- Benefits Preview -->
                        @if(!string.IsNullOrEmpty(service.Benefits))
                        {
                            <div class="mb-3">
                                <small class="text-muted d-block mb-1">
                                    <i class="fas fa-star me-1"></i>Key Benefits:
                                </small>
                                <div class="d-flex flex-wrap gap-1">
                                    @{
                                        var benefits = service.Benefits.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                        foreach(var benefit in benefits.Take(3))
                                        {
                                            <span class="badge bg-light text-dark small">@benefit.Trim()</span>
                                        }
                                        @if(benefits.Length > 3)
                                        {
                                            <span class="badge bg-light text-dark small">+@(benefits.Length - 3) more</span>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="card-footer bg-white border-top p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex gap-2">
                                <a href="/Contact/Index" class="btn btn-warning btn-sm">
                                    <i class="fas fa-calendar-check me-1"></i>Inquire Now
                                </a>
                                <a href="/DroneServices/Details/@service.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </a>
                            </div>
                            @if(role == "Admin")
                            {
                                <div class="d-flex gap-2">
                                    <a href="/DroneServices/Edit/@service.Id" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                    <a href="/DroneServices/Delete/@service.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Empty State -->
    @if(!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-concierge-bell fa-4x text-muted mb-3"></i>
                <h3 class="text-muted">Drone Suvidha's Unavailable</h3>
                <p class="text-muted mb-4">There are no drone suvidha's to display at the moment.</p>
                @if(role == "Admin")
                {
                    <a href="/DroneServices/Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus me-2"></i>Add Your First Drone Suvidha
                    </a>
                }
            </div>
        </div>
    }
</div>

<style>
    /* Video Background Styles */
    .background-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
    }
    
    .background-video video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        transform: translate(-50%, -50%);
        object-fit: cover;
    }
    
    /* Dark overlay for better text readability */
    .background-video::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        z-index: 1;
    }
    
    .background-video video {
        z-index: 0;
    }
    
    /* Main content container styling */
    .main-content-container {
        background-color: rgba(255, 255, 255, 0.98);
        border-radius: 15px;
        margin-top: 30px;
        padding: 25px;
        position: relative;
        z-index: 1;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(5px);
    }
    
    /* Card styling */
    .card {
        border-radius: 12px;
        transition: all 0.3s ease;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.2) !important;
        border-color: rgba(102, 126, 234, 0.5);
    }
    
    .bg-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        border: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    
    .bg-success {
        background: linear-gradient(135deg, #20c997 0%, #17a2b8 100%) !important;
        border: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    
    .bg-warning {
        background: linear-gradient(135deg, #fbb034 0%, #ffdd00 100%) !important;
    }
    
    .btn-warning {
        background: linear-gradient(135deg, #fbb034 0%, #ffdd00 100%);
        border: none;
        color: #000;
        font-weight: 500;
        transition: all 0.3s ease;
        font-size: 0.875rem;
        padding: 0.25rem 0.75rem;
    }

    .btn-warning:hover {
        background: linear-gradient(135deg, #ffdd00 0%, #fbb034 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(251, 176, 52, 0.3);
    }
    
    .btn-outline-primary, .btn-outline-info, .btn-outline-danger {
        font-size: 0.875rem;
        padding: 0.25rem 0.75rem;
        background-color: rgba(255, 255, 255, 0.8);
    }
    
    .badge {
        font-size: 0.7rem;
        padding: 0.25em 0.5em;
        border-radius: 50px;
    }
    
    .text-truncate-3 {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .card-title {
        font-size: 1.1rem;
        font-weight: 600;
    }
    
    .card-text {
        font-size: 0.9rem;
        color: #666;
    }
    
    /* Header styling */
    h1 {
        color: #333;
        text-shadow: 1px 1px 3px rgba(255, 255, 255, 0.8);
    }
    
    /* Input styling */
    .input-group {
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .input-group-text {
        background-color: rgba(248, 249, 250, 0.9);
        border-right: none;
    }
    
    .form-control, .form-select {
        background-color: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(0, 0, 0, 0.1);
    }
    
    /* Video styling */
    video {
        background-color: #000;
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .main-content-container {
            margin-top: 15px;
            padding: 15px;
        }
        
        .background-video::after {
            background: rgba(0, 0, 0, 0.5);
        }
        
        .hover-card:hover {
            transform: translateY(-3px);
        }
    }
    
    /* Animation for page load */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .main-content-container {
        animation: fadeInUp 0.6s ease-out;
    }
</style>