<a href="#" class="back-to-top" id="backToTop">
    <i class="fas fa-chevron-up"></i>
</a>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Toastr Configuration -->
    <script>
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    </script>

    <!-- Custom Scripts -->
    <script>
        // Enhanced Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            const scrollPosition = window.scrollY;
            
            if (scrollPosition > 50) {
                navbar.classList.add('scrolled');
                navbar.style.padding = '0.4rem 0';
                navbar.style.boxShadow = '0 4px 30px rgba(0,0,0,0.3)';
            } else {
                navbar.classList.remove('scrolled');
                navbar.style.padding = '0.75rem 0';
                navbar.style.boxShadow = '0 5px 15px rgba(0,0,0,0.2)';
            }
            
            // Parallax effect for logo
            const logo = document.querySelector('.navbar-logo');
            if (logo) {
                const scale = Math.max(0.95, 1 - scrollPosition / 1000);
                logo.style.transform = `scale(${scale})`;
            }
        });

        // Cart count update function
        function updateCartCount() {
            $.ajax({
                url: '/Cart/GetCartCount',
                type: 'GET',
                success: function(count) {
                    if (count > 0) {
                        $('#cartCount').text(count).show();
                    } else {
                        $('#cartCount').hide();
                    }
                },
                error: function() {
                    console.log('Error fetching cart count');
                }
            });
        }

        // Cart icon bounce animation
        function bounceCartIcon() {
            $('.cart-icon').addClass('cart-bounce');
            setTimeout(function() {
                $('.cart-icon').removeClass('cart-bounce');
            }, 500);
        }

        // Listen for cart updates from other pages
        $(document).on('cartUpdated', function(e, itemCount) {
            if (itemCount > 0) {
                $('#cartCount').text(itemCount).show();
            } else {
                $('#cartCount').hide();
            }
            bounceCartIcon();
        });
        
        // Add active class to current page with animation
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href && (href === currentPath || 
                    (href !== '/' && currentPath.startsWith(href)))) {
                    
                    // Remove active class from all links
                    navLinks.forEach(l => l.classList.remove('active'));
                    
                    // Add active class with animation
                    link.classList.add('active');
                    
                    // Add click animation
                    link.addEventListener('click', function(e) {
                        if (!this.classList.contains('active')) {
                            this.style.animation = 'none';
                            setTimeout(() => {
                                this.style.animation = 'activePulse 0.5s ease';
                            }, 10);
                        }
                    });
                }
            });
            
            // Hover animation for dropdowns
            const dropdowns = document.querySelectorAll('.dropdown');
            dropdowns.forEach(dropdown => {
                dropdown.addEventListener('mouseenter', function() {
                    const menu = this.querySelector('.dropdown-menu');
                    if (menu) {
                        menu.style.animation = 'dropdownFade 0.3s ease forwards';
                    }
                });
            });
            
            // Logo hover effect
            const logo = document.querySelector('.navbar-logo');
            if (logo) {
                logo.addEventListener('mouseenter', function() {
                    this.style.transform = 'scale(1.1) rotate(5deg)';
                    this.style.filter = 'drop-shadow(0 4px 8px rgba(13, 110, 253, 0.4))';
                });
                
                logo.addEventListener('mouseleave', function() {
                    this.style.transform = 'scale(1)';
                    this.style.filter = 'drop-shadow(0 2px 4px rgba(0,0,0,0.3))';
                });
            }
            
            // Navbar items wave animation on hover
            const navItems = document.querySelectorAll('.navbar-nav .nav-item');
            navItems.forEach((item, index) => {
                item.style.transitionDelay = `${index * 0.05}s`;
                
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                
                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
            
            // Add ripple effect to buttons
            const buttons = document.querySelectorAll('.btn, .nav-link');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const ripple = document.createElement('span');
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;
                    
                    ripple.className = 'ripple';
                    ripple.style.cssText = `
                        width: ${size}px;
                        height: ${size}px;
                        left: ${x}px;
                        top: ${y}px;
                    `;
                    
                    this.appendChild(ripple);
                    
                    setTimeout(() => {
                        ripple.remove();
                    }, 600);
                });
            });
            
            // Update cart count on page load
            updateCartCount();
        });
        
        // Initialize navbar animations on page load
        window.addEventListener('load', function() {
            const navbar = document.querySelector('.navbar');
            navbar.style.opacity = '0';
            navbar.style.transform = 'translateY(-20px)';
            
            setTimeout(() => {
                navbar.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                navbar.style.opacity = '1';
                navbar.style.transform = 'translateY(0)';
            }, 300);
            
            // Animate nav items sequentially
            const navItems = document.querySelectorAll('.navbar-nav .nav-item');
            navItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(-10px)';
                
                setTimeout(() => {
                    item.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, 400 + (index * 100));
            });
        });

        // Footer Scripts
        $(document).ready(function() {
            // Create flying drone in footer
            function createFooterDrone() {
                const container = $('#footerDrone');
                for (let i = 0; i < 2; i++) {
                    const drone = $('<i class="fas fa-drone"></i>');
                    drone.css({
                        left: '-100px',
                        top: (20 + i * 30) + '%',
                        animationDelay: i * 10 + 's',
                        animationDuration: '20s',
                        position: 'absolute'
                    });
                    container.append(drone);
                }
            }
            
            createFooterDrone();
            
            // Back to top button
            $(window).scroll(function() {
                if ($(this).scrollTop() > 300) {
                    $('#backToTop').addClass('show');
                } else {
                    $('#backToTop').removeClass('show');
                }
            });
            
            $('#backToTop').click(function(e) {
                e.preventDefault();
                $('html, body').animate({ scrollTop: 0 }, 500);
                return false;
            });
            
            // Newsletter form submission
            $('.newsletter-form').submit(function(e) {
                e.preventDefault();
                const email = $(this).find('input[type="email"]').val();
                
                if (!email) {
                    $(this).find('input').addClass('animate__animated animate__shakeX');
                    setTimeout(() => {
                        $(this).find('input').removeClass('animate__animated animate__shakeX');
                    }, 500);
                    return false;
                }
                
                const btn = $(this).find('button');
                const originalText = btn.html();
                btn.html('<i class="fas fa-spinner fa-spin me-2"></i>Subscribing...').prop('disabled', true);
                
                // Simulate API call
                setTimeout(() => {
                    btn.html('<i class="fas fa-check me-2"></i>Subscribed!').addClass('bg-success');
                    
                    // Reset form
                    setTimeout(() => {
                        $(this)[0].reset();
                        btn.html(originalText).removeClass('bg-success').prop('disabled', false);
                    }, 2000);
                    
                    // Show success message
                    toastr.success('Thank you for subscribing to AeroDrox UAV newsletter!');
                }, 1500);
                
                return false;
            });
            
            // Social icon hover effect
            $('.social-icon').on('mouseenter', function() {
                $(this).addClass('animate__animated animate__pulse');
            }).on('mouseleave', function() {
                $(this).removeClass('animate__animated animate__pulse');
            });
            
            // Footer links animation
            $('.footer-links a').on('mouseenter', function() {
                $(this).addClass('animate__animated animate__fadeInLeft');
            });
            
            // Auto-close alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
    
    @RenderSection("Scripts", required: false)
