@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using AeroDroxUAV.Models
@using System.Linq

@{
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username") ?? "";
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role") ?? "";
    var isLoggedIn = !string.IsNullOrEmpty(username);
    var isAdmin = role == "Admin";
// NOTE: Removed ViewBag.DroneServices access here, as the View Component will handle it.
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AeroDroxUAV</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100"> @* 'd-flex flex-column min-vh-100' added for sticky footer *@
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">AeroDroxUAV</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    @if (isLoggedIn)
                    {
                        @* Common Links for both User and Admin *@
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Drone" asp-action="Index">Products</a>
                        </li>
                        
                        @* SERVICES DROPDOWN - Call the new View Component here *@
                        @await Component.InvokeAsync("ServicesNavigation")
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Accessories" asp-action="Index">Accessories</a>
                        </li>
                        
                        @* ADMIN ONLY LINKS (A-2) *@
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" href="#">Analysis</a> @* Placeholder *@
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-controller="Account" asp-action="Register">Users / Admin</a>
                            </li>
                        }

                        @* Standard Links for all logged-in users (A-1 & A-2) *@
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Contact" asp-action="Index">Contact Us</a> @* Placeholder *@
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="About" asp-action="Index">About Us</a> @* Placeholder *@
                        </li>
                    }
                </ul>

                @* Login/Logout Section *@
                <ul class="navbar-nav">
                    @if(isLoggedIn)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">
                                Hello, @username (<span class="text-info">@role</span>)
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4 flex-grow-1"> @* 'flex-grow-1' added to occupy remaining space *@
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        &copy; @DateTime.Now.Year AeroDroxUAV. All rights reserved.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>