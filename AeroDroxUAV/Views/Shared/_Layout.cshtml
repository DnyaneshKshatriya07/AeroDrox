@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using AeroDroxUAV.Models
@using System.Linq

@{
    var httpContext = HttpContextAccessor.HttpContext;
    var username = httpContext?.Session.GetString("Username") ?? "";
    var role = httpContext?.Session.GetString("Role") ?? "";
    var isLoggedIn = !string.IsNullOrEmpty(username);
    var isAdmin = role == "Admin";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AeroDroxUAV</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_Layout.cshtml.css" asp-append-version="true" />
    
    <!-- Custom Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #0d6efd;
            --navbar-grey: linear-gradient(135deg, #495057, #6c757d);
        }
        
        * {
            font-family: 'Inter', sans-serif;
        }
        
        .navbar {
            background: var(--navbar-grey) !important;
            border-bottom: 3px solid var(--primary-color);
        }
        
        .nav-link {
            color: white !important;
        }
        
        .nav-link:hover {
            background: rgba(255, 255, 255, 0.15) !important;
        }
        
        .navbar-brand {
            color: white !important;
        }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container-fluid px-4">
            <!-- Brand Logo -->
            <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                <div class="logo-wrapper">
                    <i class="bi bi-hexagon-fill fs-4 text-white"></i>
                </div>
                <span class="fw-bold fs-3">AeroDrox<span class="text-light">UAV</span></span>
            </a>
            
            <!-- Mobile Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <!-- Home -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door"></i>
                            <span>Home</span>
                        </a>
                    </li>
                    
                    <!-- Products -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Drone" asp-action="Index">
                            <i class="bi bi-drone"></i>
                            <span>Drones</span>
                        </a>
                    </li>
                    
                    <!-- Services Dropdown -->
                    @await Component.InvokeAsync("ServicesNavigation")
                    
                    <!-- Accessories -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Accessories" asp-action="Index">
                            <i class="bi bi-tools"></i>
                            <span>Drone Bazaar</span>
                        </a>
                    </li>
                    
                    <!-- Admin Links -->
                    @if (isAdmin)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 text-warning" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-shield-check"></i>
                                <span>Admin</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark border-0 shadow-lg">
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 py-3" asp-controller="Analysis" asp-action="Index">
                                        <i class="bi bi-graph-up"></i>
                                        <span>Analytics Dashboard</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 py-3" asp-controller="Account" asp-action="UserManagement">
                                        <i class="bi bi-people"></i>
                                        <span>User Management</span>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 py-3" href="#">
                                        <i class="bi bi-gear"></i>
                                        <span>System Settings</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    
                    <!-- Contact -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="Contact" asp-action="Index">
                            <i class="bi bi-chat-dots"></i>
                            <span>Contact</span>
                        </a>
                    </li>
                    
                    <!-- About -->
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center gap-2" asp-controller="About" asp-action="Index">
                            <i class="bi bi-info-circle"></i>
                            <span>About</span>
                        </a>
                    </li>
                </ul>
                
                <!-- User Section -->
                <ul class="navbar-nav">
                    @if(isLoggedIn)
                    {
                        <!-- User Profile -->
                        <li class="nav-item dropdown me-3">
                            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
                                <div class="user-avatar bg-primary rounded-circle d-flex align-items-center justify-content-center" 
                                     style="width: 40px; height: 40px;">
                                    <i class="bi bi-person-fill text-white"></i>
                                </div>
                                <div class="d-flex flex-column">
                                    <span class="fw-medium">@username</span>
                                    <small class="text-info">@role</small>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg">
                                <li>
    <a class="dropdown-item d-flex align-items-center gap-2 py-3" 
       asp-controller="Account" asp-action="MyProfile">
        <i class="bi bi-person-circle"></i>
        <span>My Profile</span>
    </a>
</li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 py-3" href="#">
                                        <i class="bi bi-bell"></i>
                                        <span>Notifications</span>
                                        <span class="badge bg-primary ms-auto">3</span>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item d-flex align-items-center gap-2 py-3 text-danger" asp-controller="Account" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i>
                                        <span>Logout</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Auth Buttons -->
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light d-flex align-items-center gap-2" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus"></i>
                                <span>Register</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary d-flex align-items-center gap-2" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i>
                                <span>Login</span>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container my-5 flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <i class="bi bi-hexagon-fill fs-2 text-primary"></i>
                        <h4 class="mb-0">AeroDrox<span class="text-primary">UAV</span></h4>
                    </div>
                    <p class="text-muted mb-0">
                        Revolutionizing industries through advanced drone technology and specialized services.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex justify-content-md-end gap-3">
                        <a href="#" class="text-white text-decoration-none">
                            <i class="bi bi-facebook fs-5"></i>
                        </a>
                        <a href="#" class="text-white text-decoration-none">
                            <i class="bi bi-twitter fs-5"></i>
                        </a>
                        <a href="#" class="text-white text-decoration-none">
                            <i class="bi bi-linkedin fs-5"></i>
                        </a>
                        <a href="#" class="text-white text-decoration-none">
                            <i class="bi bi-instagram fs-5"></i>
                        </a>
                    </div>
                    <p class="mt-3 mb-0 text-muted">
                        &copy; @DateTime.Now.Year AeroDroxUAV. All rights reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Custom Scripts -->
    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.style.padding = '0.5rem 0';
                navbar.style.boxShadow = '0 4px 20px rgba(0,0,0,0.2)';
            } else {
                navbar.style.padding = '0.75rem 0';
                navbar.style.boxShadow = '0 5px 15px rgba(0,0,0,0.2)';
            }
        });
        
        // Add active class to current page
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                    link.style.background = 'rgba(13, 110, 253, 0.2)';
                }
            });
        });
    </script>
    
    @RenderSection("Scripts", required: false)
</body>
</html>