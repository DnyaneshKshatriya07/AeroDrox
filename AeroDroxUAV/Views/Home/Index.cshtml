{
    <section class="py-5 bg-light">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="h1 mb-3">
                    <i class="fas fa-concierge-bell text-primary me-2"></i>Our Drone Services
                </h2>
                <p class="text-muted lead mb-4">Professional drone solutions for various industries</p>
                <a href="/DroneServices/Index" class="btn btn-outline-primary">
                    <i class="fas fa-eye me-2"></i>View All Services
                </a>
            </div>

            <div class="row">
                @foreach (var service in (IEnumerable<AeroDroxUAV.Models.DroneServices>)ViewBag.FeaturedServices)
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card h-100 border-0 shadow-sm hover-card">
                            @if (!string.IsNullOrEmpty(service.ImageUrl))
                            {
                                <img src="@service.ImageUrl" class="card-img-top" alt="@service.Name" 
                                     style="height: 180px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" 
