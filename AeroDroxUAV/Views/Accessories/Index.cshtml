@model IEnumerable<AeroDroxUAV.Models.Accessories>
@{
    ViewData["Title"] = "Accessories Store";
    var role = ViewBag.Role as string;
}

<!-- Add Toastr CSS and JS for notifications -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

<!-- Video Background Section -->
<div data-poster-url="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -poster-00001.jpg" 
     data-video-urls="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.mp4,https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.webm" 
     data-autoplay="true" 
     data-loop="true" 
     data-wf-ignore="true" 
     class="background-video w-background-video w-background-video-atom">
    
    <video id="accessories-video-bg" 
           autoplay="" 
           loop="" 
           style="background-image:url('https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -poster-00001.jpg')" 
           muted="" 
           playsinline="" 
           data-wf-ignore="true" 
           data-object-fit="cover">
        
        <source src="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.mp4" 
                data-wf-ignore="true" 
                type="video/mp4">
        
        <source src="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.webm" 
                data-wf-ignore="true" 
                type="video/webm">
    </video>
</div>

<!-- Main Content -->
<div class="container-fluid px-4 main-content-container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-tools me-2"></i>Drone Bazaar
            </h1>
            <p class="text-muted mb-0">Browse and purchase drone accessories and spare parts</p>
        </div>
        @if(role == "Admin")
        {
            <a href="/Accessories/Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Add New Accessory
            </a>
        }
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" id="searchInput" class="form-control" placeholder="Search accessories by name, category or condition...">
                <button class="btn btn-outline-primary" type="button" id="searchBtn">
                    Search
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <select class="form-select" id="categoryFilter">
                <option value="">All Categories</option>
                <option value="Motors">Motors</option>
                <option value="Cameras">Cameras</option>
                <option value="DroneFrames">Drone Frames</option>
                <option value="Sensors">Sensors</option>
                <option value="Gimbal">Gimbal</option>
                <option value="Batteries">Batteries</option>
                <option value="Propellers">Propellers</option>
                <option value="FlightControllers">Flight Controllers</option>
                <option value="RemoteControllers">Remote Controllers</option>
                <option value="GPSModule">GPS Module</option>
                <option value="Other">Other</option>
            </select>
        </div>
    </div>

    <!-- Stats Cards - Admin Only -->
    @if(role == "Admin")
    {
        <div class="row mb-4">
            <div class="col-md-3 col-6">
                <div class="card bg-primary text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-tools fa-2x"></i>
                            </div>
                            <div>
                                <h4 class="mb-0">@Model.Count()</h4>
                                <p class="mb-0">Total Accessories</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-success text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-boxes fa-2x"></i>
                            </div>
                            <div>
                                <h4 class="mb-0">@Model.Sum(a => a.StockQuantity)</h4>
                                <p class="mb-0">In Stock</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-info text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-tag fa-2x"></i>
                            </div>
                            <div>
                                <h4 class="mb-0">@Model.Count(a => a.DiscountPrice.HasValue)</h4>
                                <p class="mb-0">On Sale</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-warning text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-tools fa-2x"></i>
                            </div>
                            <div>
                                <h4 class="mb-0">@Model.Count(a => a.StockQuantity == 0)</h4>
                                <p class="mb-0">Out of Stock</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Accessories Cards Grid - 4 cards per row -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3" id="accessoryGrid">
        @foreach(var accessory in Model)
        {
            <div class="col accessory-card" 
                 data-name="@accessory.Name.ToLower()" 
                 data-description="@accessory.Description?.ToLower()"
                 data-condition="@accessory.Condition?.ToLower()"
                 data-category="@accessory.Category?.ToLower()">
                <div class="card product-card shadow-sm h-100">
                    <!-- Image Section -->
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(accessory.ImageUrl))
                        {
                            <img src="@accessory.ImageUrl" class="card-img-top accessory-image" 
                                 alt="@accessory.Name" style="height: 180px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="https://images.unsplash.com/photo-1581094794329-c8112a89af12?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                                 class="card-img-top accessory-image" 
                                 alt="@accessory.Name" style="height: 180px; object-fit: cover;">
                        }
                        
                        <!-- Sale Badge -->
                        @if (accessory.DiscountPrice.HasValue)
                        {
                            <div class="position-absolute top-0 start-0 p-2">
                                <span class="badge bg-danger small-badge">
                                    <i class="fas fa-fire me-1"></i>SALE
                                </span>
                            </div>
                        }
                        
                        <!-- Category Badge -->
                        <div class="position-absolute top-0 end-0 p-2">
                            @if(!string.IsNullOrEmpty(accessory.Category))
                            {
                                <span class="badge bg-info small-badge">
                                    <i class="fas fa-tag me-1"></i>@accessory.Category
                                </span>
                            }
                        </div>
                        
                        <!-- Condition Badge -->
                        <div class="position-absolute top-0 end-0 p-2" style="top: 40px !important;">
                            @if(!string.IsNullOrEmpty(accessory.Condition))
                            {
                                <span class="badge @(accessory.Condition == "New" ? "bg-success" : accessory.Condition == "Refurbished" ? "bg-warning" : "bg-secondary") small-badge mt-1">
                                    @accessory.Condition
                                </span>
                            }
                        </div>
                        
                        <!-- Stock Status -->
                        <div class="position-absolute bottom-0 start-0 p-2">
                            @if(accessory.StockQuantity > 0)
                            {
                                <span class="badge bg-success small-badge">
                                    <i class="fas fa-check-circle me-1"></i>In Stock (@accessory.StockQuantity)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger small-badge">
                                    <i class="fas fa-times-circle me-1"></i>Out of Stock
                                </span>
                            }
                        </div>
                    </div>
                    
                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column p-3">
                        <!-- Title -->
                        <div class="mb-2">
                            <h6 class="card-title fw-bold mb-1">@accessory.Name</h6>
                            
                            <!-- Category -->
                            @if(!string.IsNullOrEmpty(accessory.Category))
                            {
                                <div class="mb-2">
                                    <span class="badge bg-light text-dark border small-badge">
                                        <i class="fas fa-layer-group me-1"></i>@accessory.Category
                                    </span>
                                </div>
                            }
                            
                            <!-- Price Display -->
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (accessory.DiscountPrice.HasValue)
                                    {
                                        <div>
                                            <span class="text-success fw-bold">₹@accessory.DiscountPrice.Value.ToString("N2")</span>
                                            <small class="text-muted text-decoration-line-through ms-2 small">₹@accessory.Price.ToString("N2")</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-success fw-bold">₹@accessory.Price.ToString("N2")</span>
                                    }
                                </div>
                                @if (accessory.DiscountPrice.HasValue)
                                {
                                    var discountPercent = (100 - (accessory.DiscountPrice.Value / accessory.Price * 100)).ToString("N0");
                                    <span class="badge bg-danger small-badge">
                                        Save @discountPercent%
                                    </span>
                                }
                            </div>
                        </div>
                        
                        <!-- Description -->
                        <p class="card-text text-muted mb-3 flex-grow-1 small" style="font-size: 0.85rem;">
                            @if(!string.IsNullOrEmpty(accessory.Description))
                            {
                                @(accessory.Description.Length > 60 ? accessory.Description.Substring(0, 60) + "..." : accessory.Description)
                            }
                        </p>
                        
                        <!-- Action Buttons -->
                        <div class="mt-auto">
                            @if(role == "Admin")
                            {
                                <div class="d-flex justify-content-between">
                                    <a href="/Accessories/Edit/@accessory.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                    <a href="/Accessories/Delete/@accessory.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="d-grid gap-2">
                                    @if(accessory.StockQuantity > 0)
                                    {
                                        @if(ViewBag.IsLoggedIn == true)
                                        {
                                            <button class="btn btn-success btn-sm add-to-cart" 
                                                    data-accessory-id="@accessory.Id" 
                                                    data-product-name="@accessory.Name">
                                                <i class="fas fa-shopping-cart me-1"></i>Add to Cart
                                            </button>
                                            <a href="/Contact/Index" class="btn btn-success btn-sm">
                                                <i class="fas fa-calendar-check me-1"></i>Inquire Now
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-controller="Account" asp-action="Login" class="btn btn-success btn-sm">
                                                <i class="fas fa-shopping-cart me-1"></i>Login to Buy
                                            </a>
                                            <a href="/Contact/Index" class="btn btn-success btn-sm">
                                                <i class="fas fa-calendar-check me-1"></i>Inquire Now
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            <i class="fas fa-bell me-1"></i>Notify
                                        </button>
                                        <a href="/Contact/Index" class="btn btn-success btn-sm">
                                            <i class="fas fa-calendar-check me-1"></i>Inquire Now
                                        </a>
                                    }
                                    <a href="/Accessories/Details/@accessory.Id" class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-info-circle me-1"></i>Details
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- Card Footer - Admin Only -->
                    @if(role == "Admin")
                    {
                        <div class="card-footer bg-white border-top py-2 px-3">
                            <small class="text-muted">
                                <i class="fas fa-calendar-alt me-1"></i>
                                Added @accessory.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- No Results Message -->
    <div id="noResults" class="text-center py-5 d-none">
        <i class="fas fa-search fa-4x text-muted mb-3"></i>
        <h4>No accessories found</h4>
        <p class="text-muted">Try adjusting your search or filter</p>
    </div>
</div>

