    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function() {
            // Configure Toastr
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "3000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            // Search and Filter functionality
            function filterAccessories() {
                const searchTerm = $('#searchInput').val().toLowerCase().trim();
                const categoryFilter = $('#categoryFilter').val().toLowerCase();
                let visibleCount = 0;
                
                $('.accessory-card').each(function() {
                    const accessoryName = $(this).data('name') || '';
                    const accessoryDescription = $(this).data('description') || '';
                    const accessoryCondition = $(this).data('condition') || '';
                    const accessoryCategory = $(this).data('category') || '';
                    
                    const matchesSearch = searchTerm === '' || 
                                         accessoryName.includes(searchTerm) ||
                                         accessoryDescription.includes(searchTerm) ||
                                         accessoryCondition.includes(searchTerm) ||
                                         accessoryCategory.includes(searchTerm);
                    
                    const matchesCategory = !categoryFilter || accessoryCategory.includes(categoryFilter);
                    
                    if (matchesSearch && matchesCategory) {
                        $(this).show();
                        visibleCount++;
                    } else {
                        $(this).hide();
                    }
                });
                
                // Show/hide no results message
                if (visibleCount === 0) {
                    $('#noResults').removeClass('d-none');
                } else {
                    $('#noResults').addClass('d-none');
                }
            }
            
            // Event listeners for search and filter
            $('#searchInput').on('keyup', filterAccessories);
            $('#searchBtn').on('click', filterAccessories);
            $('#categoryFilter').on('change', filterAccessories);
            
            // Initialize filtering
            filterAccessories();

            // Add to Cart functionality
            $('.add-to-cart').click(function() {
                var button = $(this);
                var accessoryId = $(this).data('accessory-id');
                var productName = $(this).data('product-name');
                
                // Disable button and show loading
                button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-1"></i>Adding...');
                
                $.ajax({
                    url: '/Cart/AddToCart',
                    type: 'POST',
                    data: { 
                        accessoryId: accessoryId,
                        quantity: 1 
                    },
                    success: function(response) {
                        if (response.success) {
                            // Show success message
                            toastr.success(productName + ' added to cart!');
                            
                            // Update cart count in navbar
                            $('#cartCount').text(response.itemCount).show();
                            
                            // Animate cart icon
                            $('.cart-icon').addClass('animate__animated animate__bounce');
                            setTimeout(function() {
                                $('.cart-icon').removeClass('animate__animated animate__bounce');
                            }, 1000);
                        } else {
                            if (response.redirectUrl) {
                                window.location.href = response.redirectUrl;
                            } else {
                                toastr.error(response.message);
                            }
                        }
                    },
                    error: function() {
                        toastr.error('An error occurred while adding to cart');
                    },
                    complete: function() {
                        // Re-enable button
                        button.prop('disabled', false).html('<i class="fas fa-shopping-cart me-1"></i>Add to Cart');
                    }
                });
            });
            
            // Image hover effect
            $('.accessory-image').hover(
                function() {
                    $(this).css('transform', 'scale(1.05)');
                },
                function() {
                    $(this).css('transform', 'scale(1)');
                }
            );
        });
    </script>
}