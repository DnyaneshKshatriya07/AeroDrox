    .background-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
    }
    
    .background-video video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        transform: translate(-50%, -50%);
        object-fit: cover;
    }
    
    /* Dark overlay for better text readability */
    .background-video::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        z-index: 1;
    }
    
    .background-video video {
        z-index: 0;
    }
    
    /* Main content container styling */
    .main-content-container {
        background-color: rgba(255, 255, 255, 0.98);
        border-radius: 15px;
        margin-top: 30px;
        padding: 25px;
        position: relative;
        z-index: 1;
