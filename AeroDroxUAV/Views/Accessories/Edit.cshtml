@model AeroDroxUAV.Models.Accessories
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit Accessory";
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white py-3">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-edit fa-2x"></i>
                        </div>
                        <div>
                            <h1 class="h4 mb-0">Edit Accessory: @Model.Name</h1>
                            <p class="mb-0 opacity-75 small">Update accessory details below</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-controller="Accessories" asp-action="Edit" enctype="multipart/form-data" id="editAccessoryForm">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Name" class="form-control form-control-sm" 
                                           id="name" placeholder="Enter accessory name" required />
                                    <label for="name" class="small">
                                        <i class="fas fa-cube me-2"></i>Accessory Name
                                    </label>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="Price" class="form-control form-control-sm" 
                                           step="0.01" id="price" 
                                           placeholder="Enter price" required />
                                    <label for="price" class="small">
                                        <i class="fas fa-rupee-sign me-2"></i>Price (₹)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Discount Price Field -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="DiscountPrice" step="0.01" 
                                           class="form-control form-control-sm" id="discountPrice" 
                                           placeholder="Enter discount price (optional)" />
                                    <label for="discountPrice" class="small">
                                        <i class="fas fa-tag me-2"></i>Discount Price (₹) (Optional)
                                    </label>
                                    <div class="form-text small">
                                        Set discount price for sale. Leave empty for no discount.
                                    </div>
                                    <span asp-validation-for="DiscountPrice" class="text-danger small"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="StockQuantity" class="form-control form-control-sm" 
                                           id="quantity" placeholder="Enter quantity" min="0" required />
                                    <label for="quantity" class="small">
                                        <i class="fas fa-boxes me-2"></i>Stock Quantity
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Image Upload -->
                        <div class="row mb-3">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="imageFile" class="form-label fw-semibold small">
                                        <i class="fas fa-image me-2"></i>Accessory Image
                                    </label>
                                    <input type="file" asp-for="ImageFile" class="form-control form-control-sm" 
                                           id="imageFile" accept="image/*">
                                    <div class="form-text small">
                                        Upload a new image or keep the current one (Reccomenadtion: JPG, PNG, max 5MB, sqaure size (512 x 512 pixels) for best view)
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div id="currentImage" class="mt-2">
                                        <p class="text-muted mb-2 small">Current Image:</p>
                                        <img src="@Model.ImageUrl" class="img-thumbnail" style="max-height: 150px;" />
                                    </div>
                                }
                                
                                <div id="imagePreview" class="mt-2 text-center d-none">
                                    <p class="text-muted mb-2 small">New Image Preview:</p>
                                    <img id="previewImage" class="img-thumbnail" style="max-height: 150px;" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <textarea asp-for="Description" class="form-control form-control-sm" 
                                          id="description" placeholder="Enter description"
                                          style="height: 100px;"></textarea>
                                <label for="description" class="small">
                                    <i class="fas fa-align-left me-2"></i>Description
                                </label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <select asp-for="Condition" class="form-select form-select-sm" id="condition">
                                        <option value="">Select Condition</option>
                                        <option value="New">New</option>
                                        <option value="Refurbished">Refurbished</option>
                                        <option value="Used">Used</option>
                                    </select>
                                    <label for="condition" class="small">
                                        <i class="fas fa-certificate me-2"></i>Condition
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <div>
                                <button type="submit" class="btn btn-info px-4">
                                    <i class="fas fa-save me-2"></i>Update Accessory
                                </button>
                            </div>
                            <div>
                                <a href="/Accessories/Index" class="btn btn-outline-secondary px-4">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Image preview
            $('#imageFile').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#previewImage').attr('src', e.target.result);
                        $('#imagePreview').removeClass('d-none');
                        $('#currentImage').addClass('d-none');
                    }
                    reader.readAsDataURL(file);
                } else {
                    $('#imagePreview').addClass('d-none');
                    $('#currentImage').removeClass('d-none');
                }
            });

            // Form validation
            $('#editAccessoryForm').submit(function(e) {
                e.preventDefault();
                
                var isValid = true;
                $(this).find('[required]').each(function() {
                    if ($(this).val() === '') {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });
                
                // Validate discount price
                var price = parseFloat($('#price').val());
                var discountPrice = parseFloat($('#discountPrice').val());
                
                if (!isNaN(discountPrice) && discountPrice >= price) {
                    $('#discountPrice').addClass('is-invalid');
                    isValid = false;
                } else {
                    $('#discountPrice').removeClass('is-invalid');
                }
                
                if (isValid) {
                    this.submit();
                }
            });
            
            // Real-time validation
            $('input[required], textarea[required]').on('blur', function() {
                if ($(this).val() === '') {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
            
            // Price and Discount validation
            $('#price, #discountPrice').on('blur', function() {
                var price = parseFloat($('#price').val());
                var discountPrice = parseFloat($('#discountPrice').val());
                
                if (!isNaN(price)) {
                    $('#price').val(price.toFixed(2));
                }
                
                if (!isNaN(discountPrice)) {
                    $('#discountPrice').val(discountPrice.toFixed(2));
                    
                    if (discountPrice >= price) {
                        $('#discountPrice').addClass('is-invalid');
                        alert('Discount price must be less than original price');
                    } else {
                        $('#discountPrice').removeClass('is-invalid');
                    }
                }
            });
            
            // Quantity validation
            $('#quantity').on('blur', function() {
                var value = parseInt($(this).val());
                if (value < 0) {
                    $(this).val(0);
                }
            });
        });
    </script>
    
    <style>
        .bg-info {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
        }
        
        .card {
            border-radius: 12px;
            overflow: hidden;
        }
        
        .form-floating {
            position: relative;
        }
        
        .form-control-sm, .form-select-sm {
            border-radius: 8px;
            border: 2px solid #e0e0e0;
            padding: 14px 10px 2px 10px;
            font-size: 0.875rem;
            transition: all 0.3s ease;
        }
        
        .form-control-sm:focus, .form-select-sm:focus {
            border-color: #17a2b8;
            box-shadow: 0 0 0 0.15rem rgba(23, 162, 184, 0.25);
        }
        
        .form-control-sm.is-invalid {
            border-color: #dc3545;
        }
        
        .btn-info {
            background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
            border: none;
            border-radius: 8px;
            padding: 8px 20px;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
        }
        
        .btn-info:hover {
            background: linear-gradient(135deg, #138496 0%, #17a2b8 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(23, 162, 184, 0.3);
        }
        
        .btn-outline-secondary {
            border-radius: 8px;
            padding: 8px 20px;
            border-width: 2px;
            font-size: 0.9rem;
        }
        
        .small {
            font-size: 0.875rem;
        }
        
        label {
            font-weight: 500;
        }
    </style>
}