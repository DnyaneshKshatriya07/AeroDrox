@model AeroDroxUAV.Models.Drone
@{
    ViewData["Title"] = "Delete Drone";
}

<h2>Delete Drone</h2>

<p>Are you sure you want to delete this drone?</p>

<div>
    <h4>@Model.Name (@Model.Type)</h4>
    <p>Price: @Model.Price</p>
    <p>Description: @Model.Description</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/Drone/Index" class="btn btn-secondary">Cancel</a>
</form>
