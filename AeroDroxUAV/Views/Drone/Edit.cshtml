@model AeroDroxUAV.Models.Drone
@{
    ViewData["Title"] = "Edit Drone";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-white py-4">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-edit fa-2x"></i>
                        </div>
                        <div>
                            <h1 class="h3 mb-0">Edit Drone: @Model.Name</h1>
                            <p class="mb-0 opacity-75">Update the drone details below</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-5">
                    <form method="post" enctype="multipart/form-data" id="editDroneForm">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Name" class="form-control" 
                                           id="name" placeholder="Enter drone name" required />
                                    <label for="name">
                                        <i class="fas fa-signature me-2"></i>Drone Name
                                    </label>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <select asp-for="Category" class="form-select" id="category" required>
                                        <option value="">Select Category</option>
                                        <option value="Agriculture">Agriculture</option>
                                        <option value="Defence">Defence</option>
                                        <option value="Survelliance">Survelliance</option>
                                        <option value="Mapping">Mapping</option>
                                        <option value="Photography">Photography</option>
                                        <option value="DJI">DJI</option>
                                        <option value="Customize">Customize</option>
                                    </select>
                                    <label for="category">
                                        <i class="fas fa-layer-group me-2"></i>Category
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="Price" class="form-control" 
                                           step="0.01" min="0" id="price" 
                                           placeholder="Enter price" required />
                                    <label for="price">
                                        <i class="fas fa-dollar-sign me-2"></i>Original Price
                                    </label>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="DiscountPrice" class="form-control" 
                                           step="0.01" min="0" id="discountPrice" 
                                           placeholder="Enter discount price (optional)" />
                                    <label for="discountPrice">
                                        <i class="fas fa-percentage me-2"></i>Discount Price (Optional)
                                    </label>
                                    <div class="form-text">
                                        Only show if less than original price
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Condition Dropdown -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <select asp-for="Condition" class="form-select" id="condition" required>
                                        <option value="">Select Condition</option>
                                        <option value="New">New</option>
                                        <option value="Refurbished">Refurbished</option>
                                        <option value="Used">Used</option>
                                    </select>
                                    <label for="condition">
                                        <i class="fas fa-clipboard-check me-2"></i>Condition
                                    </label>
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-4">
                                <div class="form-floating">
                                    <input asp-for="StockQuantity" class="form-control" 
                                           id="stock" placeholder="Stock quantity" min="0" required />
                                    <label for="stock">
                                        <i class="fas fa-boxes me-2"></i>Stock Quantity
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Image Upload -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="imageFile" class="form-label fw-semibold">
                                        <i class="fas fa-image me-2"></i>Drone Image
                                    </label>
                                    <input type="file" asp-for="ImageFile" class="form-control" 
                                           id="imageFile" accept="image/*">
                                    <div class="form-text">
                                        Upload a new image or keep the current one
                                    </div>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                {
                                    <div id="currentImage" class="mt-3">
                                        <p class="text-muted mb-2">Current Image:</p>
                                        <img src="@Model.ImageUrl" class="img-thumbnail" style="max-height: 200px;" />
                                    </div>
                                }
                                
                                <div id="imagePreview" class="mt-3 text-center d-none">
                                    <p class="text-muted mb-2">New Image Preview:</p>
                                    <img id="previewImage" class="img-thumbnail" style="max-height: 200px;" />
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                <textarea asp-for="Description" class="form-control" 
                                          id="description" placeholder="Enter description"
                                          style="height: 150px;"></textarea>
                                <label for="description">
                                    <i class="fas fa-align-left me-2"></i>Description
                                </label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-check form-switch mt-4">
                                    <input class="form-check-input" type="checkbox" asp-for="IsFeatured" id="featured">
                                    <label class="form-check-label fw-semibold" for="featured">
                                        <i class="fas fa-star me-2"></i>Featured Drone
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-5">
                            <div>
                                <button type="submit" class="btn btn-warning btn-lg px-5">
                                    <i class="fas fa-save me-2"></i>Update Drone
                                </button>
                            </div>
                            <div>
                                <a href="/Drone/Index" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Image preview
            $('#imageFile').change(function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        $('#previewImage').attr('src', e.target.result);
                        $('#imagePreview').removeClass('d-none');
                        $('#currentImage').addClass('d-none');
                    }
                    reader.readAsDataURL(file);
                } else {
                    $('#imagePreview').addClass('d-none');
                    $('#currentImage').removeClass('d-none');
                }
            });

            // Discount price validation
            $('#discountPrice').on('blur', function() {
                const originalPrice = parseFloat($('#price').val()) || 0;
                const discountPrice = parseFloat($(this).val()) || 0;
                
                if (discountPrice > 0 && discountPrice >= originalPrice) {
                    $(this).addClass('is-invalid');
                    $(this).next('.form-text').addClass('text-danger');
                    $(this).next('.form-text').text('Discount price must be less than original price');
                } else {
                    $(this).removeClass('is-invalid');
                    $(this).next('.form-text').removeClass('text-danger');
                    $(this).next('.form-text').text('Only show if less than original price');
                }
            });

            // Form validation
            $('#editDroneForm').submit(function(e) {
                e.preventDefault();
                
                var isValid = true;
                $(this).find('[required]').each(function() {
                    if ($(this).val() === '') {
                        $(this).addClass('is-invalid');
                        isValid = false;
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });
                
                // Validate discount price
                const originalPrice = parseFloat($('#price').val()) || 0;
                const discountPrice = parseFloat($('#discountPrice').val()) || 0;
                
                if (discountPrice > 0 && discountPrice >= originalPrice) {
                    $('#discountPrice').addClass('is-invalid');
                    isValid = false;
                }
                
                if (isValid) {
                    this.submit();
                }
            });
            
            // Real-time validation
            $('input[required], select[required], textarea[required]').on('blur', function() {
                if ($(this).val() === '') {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
            
            // Price formatting
            $('#price, #discountPrice').on('blur', function() {
                var value = parseFloat($(this).val());
                if (!isNaN(value) && value >= 0) {
                    $(this).val(value.toFixed(2));
                }
            });
        });
    </script>
    
    <style>
        .card-header.bg-warning {
            background: linear-gradient(135deg, #fbb034 0%, #ffdd00 100%);
        }
        
        .card {
            border-radius: 20px;
            overflow: hidden;
        }
        
        .form-floating {
            position: relative;
        }
        
        .form-control, .form-select {
            border-radius: 12px;
            border: 2px solid #e0e0e0;
            padding: 16px 12px 4px 12px;
            transition: all 0.3s ease;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }
        
        .form-control.is-invalid {
            border-color: #dc3545;
        }
        
        .btn-warning {
            background: linear-gradient(135deg, #fbb034 0%, #ffdd00 100%);
            border: none;
            border-radius: 12px;
            padding: 12px 30px;
            font-weight: 600;
            color: #000;
            transition: all 0.3s ease;
        }
        
        .btn-warning:hover {
            background: linear-gradient(135deg, #ffdd00 0%, #fbb034 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(255, 193, 7, 0.4);
            color: #000;
        }
        
        .btn-outline-secondary {
            border-radius: 12px;
            padding: 12px 30px;
            border-width: 2px;
        }
        
        label {
            font-weight: 500;
        }
    </style>
}