@model IEnumerable<AeroDroxUAV.Models.Drone>
@{
    var role = ViewBag.Role as string;
    ViewData["Title"] = "Drone Management";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-drone me-2"></i>Drone Management
            </h1>
            <p class="text-muted mb-0">Manage your drone inventory and specifications</p>
        </div>
        @if(role == "Admin")
        {
            <a href="/Drone/Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Add New Drone
            </a>
        }
    </div>

    <div class="card shadow border-0">
        <div class="card-header bg-white border-bottom py-3">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Drone List
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">
                                <i class="fas fa-signature me-2"></i>Name
                            </th>
                            <th>
                                <i class="fas fa-tag me-2"></i>Type
                            </th>
                            <th>
                                <i class="fas fa-dollar-sign me-2"></i>Price
                            </th>
                            <th>
                                <i class="fas fa-align-left me-2"></i>Description
                            </th>
                            @if(role == "Admin")
                            {
                                <th class="text-end pe-4">
                                    <i class="fas fa-cogs me-2"></i>Actions
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var drone in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-semibold">
                                    <i class="fas fa-drone text-primary me-2"></i>@drone.Name
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">@drone.Type</span>
                                </td>
                                <td class="fw-bold text-success">
                                    $@drone.Price
                                </td>
                                <td class="text-truncate" style="max-width: 300px;" title="@drone.Description">
                                    @drone.Description
                                </td>
                                @if(role == "Admin")
                                {
                                    <td class="text-end pe-4">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="/Drone/Edit/@drone.Id" class="btn btn-outline-primary">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                            <a href="/Drone/Delete/@drone.Id" class="btn btn-outline-danger">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Showing <strong>@Model.Count()</strong> drones
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        overflow: hidden;
    }
    
    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
    }
    
    .table td {
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
        transition: all 0.2s ease;
    }
    
    .badge {
        font-size: 0.75rem;
        padding: 0.35em 0.65em;
        border-radius: 50px;
    }
    
    .btn-group .btn {
        border-radius: 8px;
        padding: 0.375rem 1rem;
        margin: 0 2px;
    }
    
    .text-truncate {
        max-width: 250px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>