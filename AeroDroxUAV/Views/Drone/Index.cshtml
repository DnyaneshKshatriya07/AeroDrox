@model IEnumerable<AeroDroxUAV.Models.Drone>
@{
    var role = ViewBag.Role as string;
    ViewData["Title"] = "Drone Store";
}

<!-- Video Background Section -->
<div data-poster-url="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -poster-00001.jpg" 
     data-video-urls="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.mp4,https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.webm" 
     data-autoplay="true" 
     data-loop="true" 
     data-wf-ignore="true" 
     class="background-video w-background-video w-background-video-atom">
    
    <video id="drone-store-video-bg" 
           autoplay="" 
           loop="" 
           style="background-image:url('https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -poster-00001.jpg')" 
           muted="" 
           playsinline="" 
           data-wf-ignore="true" 
           data-object-fit="cover">
        
        <source src="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.mp4" 
                data-wf-ignore="true" 
                type="video/mp4">
        
        <source src="https://cdn.prod.website-files.com/6450b31696e25f8aa6cdd7b0/646f088ca1a027c73d73b145_video background -transcode.webm" 
                data-wf-ignore="true" 
                type="video/webm">
    </video>
</div>

<!-- Main Content -->
<div class="container-fluid px-4 main-content-container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-drone me-2"></i>Drone Store
            </h1>
            <p class="text-muted mb-0">Browse and purchase our premium drone collection</p>
        </div>
        @if(role == "Admin")
        {
            <a href="/Drone/Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Add New Drone
            </a>
        }
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" id="searchInput" class="form-control" placeholder="Search drones by name, category or condition...">
                <button class="btn btn-outline-primary" type="button" id="searchBtn">
                    Search
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <select class="form-select" id="categoryFilter">
                <option value="">All Categories</option>
                <option value="agriculture">Agriculture</option>
                <option value="defence">Defence</option>
                <option value="survelliance">Survelliance</option>
                <option value="mapping">Mapping</option>
                <option value="photography">Photography</option>
                <option value="dji">DJI</option>
                <option value="customize">Customize</option>
            </select>
        </div>
    </div>

    <!-- Stats Cards - Admin Only -->
    @if(role == "Admin")
    {
        <div class="row mb-4">
            <div class="col-md-3 col-6">
                <div class="card bg-primary text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-drone fa-2x"></i>
                            </div>
                            <div>
                                <h4 class="mb-0">@Model.Count()</h4>
                                <p class="mb-0">Total Drones</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-success text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-percentage fa-2x"></i>
                            </div>
                            <div>
                                <h4 class="mb-0">@Model.Count(d => d.DiscountPrice.HasValue && d.DiscountPrice > 0)</h4>
                                <p class="mb-0">On Sale</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-info text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-boxes fa-2x"></i>
                            </div>
                            <div>
                                <h4 class="mb-0">@Model.Sum(d => d.StockQuantity)</h4>
                                <p class="mb-0">In Stock</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card bg-warning text-white shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="me-3">
                                <i class="fas fa-bolt fa-2x"></i>
                            </div>
                            <div>
                                <h4 class="mb-0">@Model.Count(d => d.StockQuantity == 0)</h4>
                                <p class="mb-0">Out of Stock</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Drone Cards Grid - 4 cards per row -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3" id="droneGrid">
        @foreach(var drone in Model)
        {
            var discountPercentage = 0;
            if (drone.DiscountPrice.HasValue && drone.DiscountPrice > 0)
            {
                discountPercentage = (int)Math.Round(((drone.Price - drone.DiscountPrice.Value) / drone.Price) * 100, 0);
            }
            
            <div class="col drone-card" 
                 data-name="@drone.Name.ToLower()" 
                 data-category="@drone.Category?.ToLower()"
                 data-condition="@drone.Condition?.ToLower()">
                <div class="card product-card shadow-sm h-100">
                    <!-- Image Section -->
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(drone.ImageUrl))
                        {
                            <img src="@drone.ImageUrl" class="card-img-top drone-image" 
                                 alt="@drone.Name" style="height: 180px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="https://images.unsplash.com/photo-1473968512647-3e447244af8f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                                 class="card-img-top drone-image" 
                                 alt="@drone.Name" style="height: 180px; object-fit: cover;">
                        }
                        
                        <!-- Badges -->
                        <div class="position-absolute top-0 start-0 p-2">
                            @if(drone.IsFeatured)
                            {
                                <span class="badge bg-warning small-badge">
                                    <i class="fas fa-star me-1"></i>Customized
                                </span>
                            }
                            @if(drone.DiscountPrice.HasValue && drone.DiscountPrice > 0)
                            {
                                <span class="badge bg-danger small-badge mt-1">
                                    -@discountPercentage%
                                </span>
                            }
                        </div>
                        
                        <div class="position-absolute top-0 end-0 p-2">
                            <span class="badge bg-success small-badge">
                                <i class="fas fa-tag me-1"></i>@drone.Category
                            </span>
                            <span class="badge bg-info small-badge d-block mt-1">
                                <i class="fas fa-clipboard-check me-1"></i>@drone.Condition
                            </span>
                        </div>
                        
                        <!-- Stock Status -->
                        <div class="position-absolute bottom-0 start-0 p-2">
                            @if(drone.StockQuantity > 0)
                            {
                                <span class="badge bg-success small-badge">
                                    <i class="fas fa-check-circle me-1"></i>In Stock (@drone.StockQuantity)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger small-badge">
                                    <i class="fas fa-times-circle me-1"></i>Out of Stock
                                </span>
                            }
                        </div>
                    </div>
                    
                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column p-3">
                        <!-- Title -->
                        <div class="mb-2">
                            <h6 class="card-title fw-bold mb-1">@drone.Name</h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-secondary small-badge">@drone.Condition</span>
                                
                                <!-- Price Display -->
                                <div>
                                    @if (drone.DiscountPrice.HasValue && drone.DiscountPrice > 0)
                                    {
                                        <div class="text-end">
                                            <h6 class="text-danger fw-bold mb-0">₹@drone.DiscountPrice.Value.ToString("N2")</h6>
                                            <small class="text-muted text-decoration-line-through">₹@drone.Price.ToString("N2")</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <h6 class="text-success fw-bold mb-0">₹@drone.Price.ToString("N2")</h6>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <!-- Description -->
                        <p class="card-text text-muted mb-3 flex-grow-1 small" style="font-size: 0.85rem;">
                            @if(!string.IsNullOrEmpty(drone.Description))
                            {
                                @if(drone.Description.Length > 60)
                                {
                                    @drone.Description.Substring(0, 60)
                                    <text>...</text>
                                }
                                else
                                {
                                    @drone.Description
                                }
                            }
                        </p>
                        
                        <!-- Action Buttons -->
                        <div class="mt-auto">
                            @if(role == "Admin")
                            {
                                <div class="d-flex justify-content-between">
                                    <a href="/Drone/Edit/@drone.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                    <a href="/Drone/Delete/@drone.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="d-grid gap-2">
                                    @if(drone.StockQuantity > 0)
                                    {
                                        @if(ViewBag.IsLoggedIn == true)
                                        {
                                            <button class="btn btn-primary btn-sm btn-buy" data-drone-id="@drone.Id">
                                                <i class="fas fa-shopping-cart me-1"></i>Buy Now
                                            </button>
                                        }
                                        else
                                        {
                                            <a asp-controller="Account" asp-action="BuyProduct" asp-route-productId="@drone.Id" class="btn btn-primary btn-sm">
                                                <i class="fas fa-shopping-cart me-1"></i>Buy Now
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            <i class="fas fa-bell me-1"></i>Notify When Available
                                        </button>
                                    }
                                    <a href="/Drone/Details/@drone.Id" class="btn btn-outline-secondary btn-sm">
                                        <i class="fas fa-info-circle me-1"></i>Details
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- Card Footer - Admin Only -->
                    @if(role == "Admin")
                    {
                        <div class="card-footer bg-white border-top py-2 px-3">
                            <small class="text-muted">
                                <i class="fas fa-calendar-alt me-1"></i>
                                Added @drone.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- No Results Message -->
    <div id="noResults" class="text-center py-5 d-none">
        <i class="fas fa-search fa-4x text-muted mb-3"></i>
        <h4>No drones found</h4>
        <p class="text-muted">Try adjusting your search or filter</p>
    </div>
</div>

<style>
    /* Video Background Styles */
    .background-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
    }
    
    .background-video video {
        position: absolute;
        top: 50%;
        left: 50%;
        min-width: 100%;
        min-height: 100%;
        width: auto;
        height: auto;
        transform: translate(-50%, -50%);
        object-fit: cover;
    }
    
    /* Dark overlay for better text readability */
    .background-video::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        z-index: 1;
    }
    
    .background-video video {
        z-index: 0;
    }
    
    /* Main content container styling */
    .main-content-container {
        background-color: rgba(255, 255, 255, 0.98);
        border-radius: 15px;
        margin-top: 30px;
        padding: 25px;
        position: relative;
        z-index: 1;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        backdrop-filter: blur(5px);
    }
    
    /* Enhanced card styling for better contrast on video background */
    .card {
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(255, 255, 255, 0.95);
    }
    
    .product-card {
        height: 100%;
    }
    
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.2);
        border-color: rgba(102, 126, 234, 0.5);
    }
    
    .product-card .card-img-top {
        transition: transform 0.3s ease;
    }
    
    .small-badge {
        font-size: 0.7rem;
        padding: 0.25em 0.5em;
        border-radius: 50px;
    }
    
    .btn-buy {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.85rem;
        padding: 0.375rem 0.75rem;
        transition: all 0.3s ease;
        color: white;
    }
    
    .btn-buy:hover {
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        transform: translateY(-1px);
        box-shadow: 0 4px 10px rgba(102, 126, 234, 0.4);
        color: white;
    }
    
    .position-absolute {
        z-index: 1;
    }
    
    .input-group {
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .input-group-text {
        background-color: rgba(248, 249, 250, 0.9);
        border-right: none;
    }
    
    .form-control, .form-select {
        background-color: rgba(255, 255, 255, 0.9);
        border: 1px solid rgba(0, 0, 0, 0.1);
    }
    
    .stats-card {
        border-radius: 8px;
        border: none;
    }
    
    .stats-card i {
        opacity: 0.9;
    }
    
    .text-decoration-line-through {
        text-decoration: line-through !important;
    }
    
    .row-cols-lg-4 > .col {
        padding: 0.5rem;
    }
    
    .card-title {
        font-size: 0.95rem;
        line-height: 1.2;
    }
    
    /* Header styling */
    h1 {
        color: #333;
        text-shadow: 1px 1px 3px rgba(255, 255, 255, 0.8);
    }
    
    /* Stats cards enhancement */
    .card.bg-primary, 
    .card.bg-success, 
    .card.bg-info, 
    .card.bg-warning {
        border: none;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
    
    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .main-content-container {
            margin-top: 15px;
            padding: 15px;
        }
        
        .background-video::after {
            background: rgba(0, 0, 0, 0.5);
        }
    }
    
    /* Animation for page load */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .main-content-container {
        animation: fadeInUp 0.6s ease-out;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search and Filter functionality
            function filterDrones() {
                const searchTerm = $('#searchInput').val().toLowerCase().trim();
                const categoryFilter = $('#categoryFilter').val().toLowerCase();
                let visibleCount = 0;
                
                $('.drone-card').each(function() {
                    const droneName = $(this).data('name') || '';
                    const droneCategory = $(this).data('category') || '';
                    const droneCondition = $(this).data('condition') || '';
                    
                    const matchesSearch = searchTerm === '' || 
                                         droneName.includes(searchTerm) || 
                                         droneCategory.includes(searchTerm) ||
                                         droneCondition.includes(searchTerm);
                    
                    const matchesCategory = !categoryFilter || droneCategory.includes(categoryFilter);
                    
                    if (matchesSearch && matchesCategory) {
                        $(this).show();
                        visibleCount++;
                    } else {
                        $(this).hide();
                    }
                });
                
                // Show/hide no results message
                if (visibleCount === 0) {
                    $('#noResults').removeClass('d-none');
                } else {
                    $('#noResults').addClass('d-none');
                }
            }
            
            // Event listeners for search and filter
            $('#searchInput').on('keyup', filterDrones);
            $('#searchBtn').on('click', filterDrones);
            $('#categoryFilter').on('change', filterDrones);
            
            // Initialize filtering
            filterDrones();
            
            // Buy button click handler
            $('.btn-buy').click(function() {
                const droneId = $(this).data('drone-id');
                if (droneId) {
                    // Implement your buy logic here
                    // This could redirect to a checkout page or show a modal
                    alert('Buy functionality for drone #' + droneId + ' will be implemented!');
                }
            });
            
            // Image hover effect
            $('.drone-image').hover(
                function() {
                    $(this).css('transform', 'scale(1.05)');
                },
                function() {
                    $(this).css('transform', 'scale(1)');
                }
            );
        });
    </script>
}