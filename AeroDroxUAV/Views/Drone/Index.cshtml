@model IEnumerable<AeroDroxUAV.Models.Drone>
@{
    var role = ViewBag.Role as string;
    ViewData["Title"] = "Drone Store";
}

<div class="container-fluid px-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-drone me-2"></i>Drone Store
            </h1>
            <p class="text-muted mb-0">Browse and purchase our premium drone collection</p>
        </div>
        @if(role == "Admin")
        {
            <a href="/Drone/Create" class="btn btn-success">
                <i class="fas fa-plus me-2"></i>Add New Drone
            </a>
        }
    </div>

    <!-- Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-search"></i>
                </span>
                <input type="text" id="searchInput" class="form-control" placeholder="Search drones by name or category...">
                <button class="btn btn-outline-primary" type="button" id="searchBtn">
                    Search
                </button>
            </div>
        </div>
        <div class="col-md-4">
            <select class="form-select" id="categoryFilter">
                <option value="">All Categories</option>
                <option value="Consumer">Consumer</option>
                <option value="Professional">Professional</option>
                <option value="Enterprise">Enterprise</option>
                <option value="Racing">Racing</option>
                <option value="Camera">Camera Drones</option>
                <option value="Industrial">Industrial</option>
            </select>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-6">
            <div class="card bg-primary text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-drone fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">@Model.Count()</h4>
                            <p class="mb-0">Total Drones</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-success text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-percentage fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">@Model.Count(d => d.DiscountPrice.HasValue && d.DiscountPrice > 0)</h4>
                            <p class="mb-0">On Sale</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-info text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">@Model.Sum(d => d.StockQuantity)</h4>
                            <p class="mb-0">In Stock</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="card bg-warning text-white shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-bolt fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="mb-0">@Model.Count(d => d.StockQuantity == 0)</h4>
                            <p class="mb-0">Out of Stock</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Drone Cards Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4" id="droneGrid">
        @foreach(var drone in Model)
        {
            var discountPercentage = 0;
            if (drone.DiscountPrice.HasValue && drone.DiscountPrice > 0)
            {
                discountPercentage = (int)Math.Round(((drone.Price - drone.DiscountPrice.Value) / drone.Price) * 100, 0);
            }
            
            <div class="col drone-card" 
                 data-name="@drone.Name.ToLower()" 
                 data-category="@drone.Category?.ToLower()"
                 data-condition="@drone.Condition?.ToLower()">
                <div class="card product-card shadow-sm h-100">
                    <!-- Image Section -->
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(drone.ImageUrl))
                        {
                            <img src="@drone.ImageUrl" class="card-img-top drone-image" 
                                 alt="@drone.Name" style="height: 220px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="https://images.unsplash.com/photo-1473968512647-3e447244af8f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                                 class="card-img-top drone-image" 
                                 alt="@drone.Name" style="height: 220px; object-fit: cover;">
                        }
                        
                        <!-- Badges -->
                        <div class="position-absolute top-0 start-0 p-3">
                            @if(drone.IsFeatured)
                            {
                                <span class="badge bg-warning">
                                    <i class="fas fa-star me-1"></i>Customized
                                </span>
                            }
                            @if(drone.DiscountPrice.HasValue && drone.DiscountPrice > 0)
                            {
                                <span class="badge bg-danger mt-1">
                                    -@discountPercentage%
                                </span>
                            }
                        </div>
                        
                        <div class="position-absolute top-0 end-0 p-3">
                            <span class="badge bg-success">
                                <i class="fas fa-tag me-1"></i>@drone.Category
                            </span>
                            <span class="badge bg-info d-block mt-1">
                                <i class="fas fa-clipboard-check me-1"></i>@drone.Condition
                            </span>
                        </div>
                        
                        <!-- Stock Status -->
                        <div class="position-absolute bottom-0 start-0 p-3">
                            @if(drone.StockQuantity > 0)
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-check-circle me-1"></i>In Stock (@drone.StockQuantity)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="fas fa-times-circle me-1"></i>Out of Stock
                                </span>
                            }
                        </div>
                    </div>
                    
                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column">
                        <!-- Title -->
                        <div class="mb-3">
                            <h5 class="card-title fw-bold mb-1">@drone.Name</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-secondary">@drone.Condition</span>
                                
                                <!-- Price Display -->
                                <div>
                                    @if (drone.DiscountPrice.HasValue && drone.DiscountPrice > 0)
                                    {
                                        <div class="text-end">
                                            <h6 class="text-danger fw-bold mb-0">$@drone.DiscountPrice.Value.ToString("N2")</h6>
                                            <small class="text-muted text-decoration-line-through">$@drone.Price.ToString("N2")</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <h6 class="text-success fw-bold mb-0">$@drone.Price.ToString("N2")</h6>
                                    }
                                </div>
                            </div>
                        </div>
                        
                        <!-- Specifications -->
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-layer-group text-primary me-2"></i>
                                <small class="text-muted">@drone.Category</small>
                            </div>
                        </div>
                        
                        <!-- Description -->
                        <p class="card-text text-muted mb-4 flex-grow-1">
                            @if(!string.IsNullOrEmpty(drone.Description))
                            {
                                @if(drone.Description.Length > 100)
                                {
                                    @drone.Description.Substring(0, 100)
                                    <text>...</text>
                                }
                                else
                                {
                                    @drone.Description
                                }
                            }
                        </p>
                        
                        <!-- Action Buttons -->
                        <div class="mt-auto">
                            @if(role == "Admin")
                            {
                                <div class="d-flex justify-content-between">
                                    <a href="/Drone/Edit/@drone.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                    <a href="/Drone/Delete/@drone.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="d-grid gap-2">
                                    @if(drone.StockQuantity > 0)
                                    {
                                        @if(ViewBag.IsLoggedIn == true)
                                        {
                                            <button class="btn btn-primary btn-buy" data-drone-id="@drone.Id">
                                                <i class="fas fa-shopping-cart me-2"></i>Buy Now
                                            </button>
                                        }
                                        else
                                        {
                                            <a asp-controller="Account" asp-action="BuyProduct" asp-route-productId="@drone.Id" class="btn btn-primary">
                                                <i class="fas fa-shopping-cart me-2"></i>Buy Now
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary" disabled>
                                            <i class="fas fa-bell me-2"></i>Notify When Available
                                        </button>
                                    }
                                    <a href="/Drone/Details/@drone.Id" class="btn btn-outline-secondary">
                                        <i class="fas fa-info-circle me-2"></i>View Details
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- Card Footer -->
                    <div class="card-footer bg-white border-top py-2">
                        <small class="text-muted">
                            <i class="fas fa-calendar-alt me-1"></i>
                            Added @drone.CreatedAt.ToString("MMM dd, yyyy")
                        </small>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- No Results Message -->
    <div id="noResults" class="text-center py-5 d-none">
        <i class="fas fa-search fa-4x text-muted mb-3"></i>
        <h4>No drones found</h4>
        <p class="text-muted">Try adjusting your search or filter</p>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Search and Filter functionality
            function filterDrones() {
                const searchTerm = $('#searchInput').val().toLowerCase();
                const categoryFilter = $('#categoryFilter').val().toLowerCase();
                let visibleCount = 0;
                
                $('.drone-card').each(function() {
                    const droneName = $(this).data('name') || '';
                    const droneCategory = $(this).data('category') || '';
                    const droneCondition = $(this).data('condition') || '';
                    
                    const matchesSearch = droneName.includes(searchTerm) || 
                                         droneCategory.includes(searchTerm) ||
                                         droneCondition.includes(searchTerm);
                    
                    const matchesCategory = !categoryFilter || droneCategory.includes(categoryFilter);
                    
                    if (matchesSearch && matchesCategory) {
                        $(this).show();
                        visibleCount++;
                    } else {
                        $(this).hide();
                    }
                });
                
                // Show/hide no results message
                if (visibleCount === 0) {
                    $('#noResults').removeClass('d-none');
                } else {
                    $('#noResults').addClass('d-none');
                }
            }
            
            // Event listeners for search and filter
            $('#searchInput').on('keyup', filterDrones);
            $('#searchBtn').on('click', filterDrones);
            $('#categoryFilter').on('change', filterDrones);
            
            // Buy button click handler
            $('.btn-buy').click(function() {
                const droneId = $(this).data('drone-id');
                if (droneId) {
                    // Implement your buy logic here
                    // This could redirect to a checkout page or show a modal
                    alert('Buy functionality for drone #' + droneId + ' will be implemented!');
                }
            });
            
            // Image hover effect
            $('.drone-image').hover(
                function() {
                    $(this).css('transform', 'scale(1.05)');
                },
                function() {
                    $(this).css('transform', 'scale(1)');
                }
            );
        });
    </script>
    
    <style>
        .card {
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }
        
        .product-card .card-img-top {
            transition: transform 0.3s ease;
        }
        
        .badge {
            font-size: 0.75rem;
            padding: 0.35em 0.65em;
            border-radius: 50px;
        }
        
        .btn-buy {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-buy:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        
        .position-absolute {
            z-index: 1;
        }
        
        .input-group {
            border-radius: 10px;
            overflow: hidden;
        }
        
        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }
        
        .stats-card {
            border-radius: 10px;
            border: none;
        }
        
        .stats-card i {
            opacity: 0.9;
        }
        
        .text-decoration-line-through {
            text-decoration: line-through !important;
        }
    </style>
}