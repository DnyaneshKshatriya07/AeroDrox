@model AeroDroxUAV.Models.Drone
@{
    ViewData["Title"] = Model.Name + " - Details";
    var discountPercentage = 0;
    if (Model.DiscountPrice.HasValue && Model.DiscountPrice > 0)
    {
        discountPercentage = (int)Math.Round(((Model.Price - Model.DiscountPrice.Value) / Model.Price) * 100, 0);
    }
}

<!-- Add Toastr CSS and JS for notifications -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

<div class="container py-4">
    <div class="row">
        <!-- Product Images -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-3">
                    <div class="text-center mb-3">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="img-fluid rounded-3" 
                                 alt="@Model.Name" style="max-height: 350px; object-fit: contain;">
                        }
                        else
                        {
                            <img src="https://images.unsplash.com/photo-1473968512647-3e447244af8f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                                 class="img-fluid rounded-3" 
                                 alt="@Model.Name" style="max-height: 350px; object-fit: contain;">
                        }
                    </div>
                    
                    <!-- Stock Status -->
                    <div class="alert @(Model.StockQuantity > 0 ? "alert-success" : "alert-warning") mb-3 p-3">
                        <div class="d-flex align-items-center">
                            <i class="fas @(Model.StockQuantity > 0 ? "fa-check-circle" : "fa-exclamation-triangle") me-3 fa-lg"></i>
                            <div>
                                <h6 class="alert-heading mb-1">
                                    @(Model.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                                </h6>
                                <p class="mb-0">
                                    @if(Model.StockQuantity > 0)
                                    {
                                        <span>@Model.StockQuantity units available</span>
                                    }
                                    else
                                    {
                                        <span>Currently unavailable. Check back soon!</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Product Details -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-3">
                    <!-- Badges -->
                    <div class="mb-3">
                        @if(Model.IsFeatured)
                        {
                            <span class="badge bg-warning me-2 mb-2">
                                <i class="fas fa-star me-1"></i>Customized
                            </span>
                        }
                        <span class="badge bg-info me-2 mb-2">
                            <i class="fas fa-tag me-1"></i>@Model.Category
                        </span>
                        <span class="badge bg-secondary me-2 mb-2">
                            <i class="fas fa-clipboard-check me-1"></i>@Model.Condition
                        </span>
                    </div>
                    
                    <!-- Product Title and Price -->
                    <h1 class="h2 fw-bold mb-3">@Model.Name</h1>
                    
                    <!-- Price Display -->
                    <div class="mb-3">
                        @if (Model.DiscountPrice.HasValue && Model.DiscountPrice > 0)
                        {
                            <div class="d-flex align-items-center mb-2">
                                <h2 class="text-danger fw-bold me-3">₹@Model.DiscountPrice.Value.ToString("N2")</h2>
                                <h4 class="text-muted text-decoration-line-through">₹@Model.Price.ToString("N2")</h4>
                                <span class="badge bg-danger ms-3">
                                    -@discountPercentage%
                                </span>
                            </div>
                        }
                        else
                        {
                            <h2 class="text-success fw-bold">₹@Model.Price.ToString("N2")</h2>
                        }
                        @if(Model.StockQuantity > 0)
                        {
                            <span class="text-muted small">+ Free Shipping</span>
                        }
                    </div>
                    
                    <!-- Specifications -->
                    <div class="row mb-3">
                        <!-- Condition -->
                        <div class="col-md-6 mb-2">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary text-white rounded-circle p-2 me-3">
                                    <i class="fas fa-clipboard-check"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 small">Condition</h6>
                                    <p class="mb-0 fw-semibold small">@Model.Condition</p>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Category -->
                        <div class="col-md-6 mb-2">
                            <div class="d-flex align-items-center">
                                <div class="bg-info text-white rounded-circle p-2 me-3">
                                    <i class="fas fa-layer-group"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 small">Category</h6>
                                    <p class="mb-0 fw-semibold small">@Model.Category</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Description -->
                    <div class="mb-3">
                        <h4 class="h5 mb-2">
                            <i class="fas fa-align-left me-2"></i>Description
                        </h4>
                        <p class="text-muted small">@Model.Description</p>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        @if(Model.StockQuantity > 0)
                        {
                            @if(ViewBag.IsLoggedIn == true)
                            {
                                <button class="btn btn-primary py-2 add-to-cart-detail" 
                                        data-drone-id="@Model.Id" 
                                        data-product-name="@Model.Name">
                                    <i class="fas fa-shopping-cart me-2"></i>Add to Cart
                                </button>
                                <div class="d-flex gap-3">
                                    <a href="/Contact/Index" class="btn btn-primary btn-sm">
                                        <i class="fas fa-calendar-check me-1"></i>Inquire Now
                                    </a>
                                </div>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-primary py-2">
                                    <i class="fas fa-shopping-cart me-2"></i>Login to Buy
                                </a>
                                <div class="d-flex gap-3">
                                    <a href="/Contact/Index" class="btn btn-primary btn-sm">
                                        <i class="fas fa-calendar-check me-1"></i>Inquire Now
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <button class="btn btn-secondary py-2" disabled>
                                <i class="fas fa-times-circle me-2"></i>Out of Stock
                            </button>
                            <button class="btn btn-outline-primary py-2">
                                <i class="fas fa-bell me-2"></i>Notify When Available
                            </button>
                            <div class="d-flex gap-3">
                                <a href="/Contact/Index" class="btn btn-primary btn-sm">
                                    <i class="fas fa-calendar-check me-1"></i>Inquire Now
                                </a>
                            </div>
                        }
                        
                        <a href="/Drone/Index" class="btn btn-outline-secondary py-2">
                            <i class="fas fa-arrow-left me-2"></i>Back to Store
                        </a>
                    </div>
                    
                    <!-- Additional Info -->
                    <div class="mt-3 pt-3 border-top">
                        <div class="row text-center">
                            <div class="col-md-4 mb-2">
                                <div class="bg-light p-2 rounded">
                                    <i class="fas fa-shipping-fast fa-lg text-primary mb-1"></i>
                                    <h6 class="fw-bold mb-1 small">Free Shipping</h6>
                                    <p class="text-muted small mb-0">On orders over ₹5000</p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-2">
                                <div class="bg-light p-2 rounded">
                                    <i class="fas fa-shield-alt fa-lg text-success mb-1"></i>
                                    <h6 class="fw-bold mb-1 small">Warranty</h6>
                                    <p class="text-muted small mb-0">
                                        @if(Model.Condition == "New")
                                        {
                                            <span>2-Year Warranty</span>
                                        }
                                        else if(Model.Condition == "Refurbished")
                                        {
                                            <span>1-Year Warranty</span>
                                        }
                                        else
                                        {
                                            <span>90 Days Warranty</span>
                                        }
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-4 mb-2">
                                <div class="bg-light p-2 rounded">
                                    <i class="fas fa-headset fa-lg text-info mb-1"></i>
                                    <h6 class="fw-bold mb-1 small">24/7 Support</h6>
                                    <p class="text-muted small mb-0">Dedicated customer service</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
    }
    
    .badge {
        font-size: 0.8rem;
        padding: 0.4em 0.8em;
        border-radius: 50px;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }
    
    .text-decoration-line-through {
        text-decoration: line-through !important;
    }
    
    .small {
        font-size: 0.875rem;
    }
</style>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function() {
            // Configure Toastr
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "3000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            // Add to Cart from details page
            $('.add-to-cart-detail').click(function() {
                var button = $(this);
                var droneId = $(this).data('drone-id');
                var productName = $(this).data('product-name');
                
                button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin me-2"></i>Adding...');
                
                $.ajax({
                    url: '/Cart/AddToCart',
                    type: 'POST',
                    data: { 
                        droneId: droneId,
                        quantity: 1 
                    },
                    success: function(response) {
                        if (response.success) {
                            toastr.success(productName + ' added to cart!');
                            $('#cartCount').text(response.itemCount).show();
                            
                            // Animate cart icon
                            $('.cart-icon').addClass('animate__animated animate__bounce');
                            setTimeout(function() {
                                $('.cart-icon').removeClass('animate__animated animate__bounce');
                            }, 1000);
                        } else {
                            if (response.redirectUrl) {
                                window.location.href = response.redirectUrl;
                            } else {
                                toastr.error(response.message);
                            }
                        }
                    },
                    error: function() {
                        toastr.error('An error occurred while adding to cart');
                    },
                    complete: function() {
                        button.prop('disabled', false).html('<i class="fas fa-shopping-cart me-2"></i>Add to Cart');
                    }
                });
            });
        });
    </script>
}