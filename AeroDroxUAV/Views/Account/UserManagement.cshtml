@model List<AeroDroxUAV.Models.User>
@{
    ViewData["Title"] = "User Management";
    var filter = ViewBag.CurrentFilter as string ?? "All";
    var totalCount = ViewBag.TotalCount;
    var adminCount = ViewBag.AdminCount;
    var userCount = ViewBag.UserCount;
}

<h2>User Management (Admin Panel)</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a asp-action="UserManagement" asp-route-filter="All" class="btn @(filter == "All" ? "btn-primary" : "btn-outline-primary")">
            All Users (@totalCount)
        </a>
        <a asp-action="UserManagement" asp-route-filter="Admins" class="btn @(filter == "Admins" ? "btn-info" : "btn-outline-info")">
            Admins (@adminCount)
        </a>
        <a asp-action="UserManagement" 
        asp-route-filter="Users" class="btn @(filter == "Users" ? "btn-secondary" : "btn-outline-secondary")">
            Standard Users (@userCount)
        </a>
    </div>
    <a asp-action="Register" class="btn btn-success">
        <i class="fas fa-plus"></i> Add New User/Admin
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Username</td>
                    <td><span class="badge @(user.Role == "Admin" ?
                    "bg-info" : "bg-secondary")">@user.Role</span></td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                        <form asp-action="DeleteUser" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete user @user.Username?');">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No users found for this filter.</td>
            </tr>
        }
    </tbody>
</table>